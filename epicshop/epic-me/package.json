{
  "name": "epic-me",
  "private": true,
  "type": "module",
  "imports": {
    "#app/*": "./app/*",
    "#tests/*": "./tests/*",
    "#types/*": "./types/*",
    "#workers/*": "./workers/*"
  },
  "scripts": {
    "build": "react-router build",
    "deploy": "npm run build && wrangler deploy",
    "dev": "react-router dev",
    "format": "prettier --write .",
    "lint": "eslint .",
    "postinstall": "npm run typegen || exit 0",
    "preview": "npm run build && vite preview",
    "typegen": "wrangler types ./types/worker-configuration.d.ts && react-router typegen",
    "pretypecheck": "npm run typegen",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@cloudflare/workers-oauth-provider": "^0.0.11",
    "@epic-web/invariant": "^1.0.0",
    "@mcp-ui/client": "^5.13.0",
    "@mcp-ui/server": "^5.12.0",
    "isbot": "^5.1.31",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.4",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.13",
    "@epic-web/config": "^1.21.3",
    "@react-router/dev": "^7.9.4",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-devtools-json": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.43.0"
  },
  "prettier": "@epic-web/config/prettier"
}
